{
  "manifest_version": 3,
  "name": "TrustNet AI",
  "version": "1.0",
  "description": "Protects users from fake online sellers and digital scams.",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "TrustNet AI"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
